{
    "compilerOptions": {
        "rootDir": "./lib",
        "outDir": "./dist",
        "allowJs": false,
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["./lib/**/*.ts"],
    "exclude": ["**/node_modules"]
}
