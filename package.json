{
    "name": "@progymedia/temporal-cluster-cdk",
    "version": "0.1.0",
    "license": "MIT",
    "main": "dist/index",
    "scripts": {
        "clean": "rimraf dist/",
        "build": "yarn build:ts && yarn build:copyfiles",
        "build:ts": "tsc",
        "build:copyfiles": "copy-and-watch lib/customResources/temporal/adminToolsLayer/Dockerfile dist/customResources/temporal/adminToolsLayer/",
        "develop": "concurrently \"yarn:develop:ts\" \"yarn:develop:copyfiles\"",
        "develop:ts": "tsc --watch",
        "develop:copyfiles": "copy-and-watch --watch lib/customResources/temporal/adminToolsLayer/Dockerfile dist/customResources/temporal/adminToolsLayer/",
        "lint": "yarn eslint . --ext .ts",
        "format": "yarn prettier --write ./**/*.{ts,json}"
    },
    "dependencies": {
        "aws-sdk": "^2.1061.0",
        "wait-port": "^0.2.9"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.89",
        "@types/lodash": "^4.14.178",
        "@types/node": "^17.0.0",
        "@typescript-eslint/eslint-plugin": "^5.8.0",
        "@typescript-eslint/parser": "^5.8.0",
        "aws-cdk-lib": "^2.8.0",
        "concurrently": "^7.0.0",
        "constructs": "^10.0.27",
        "copy-and-watch": "^0.1.6",
        "esbuild": "^0.14.2",
        "eslint": "^8.5.0",
        "eslint-config-prettier": "^8.3.0",
        "lodash": "^4.17.21",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.5.2",
        "yaml": "^1.10.2"
    },
    "files": [
        "dist/"
    ]
}
